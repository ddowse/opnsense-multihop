<model>
    <mount>//OPNsense/multihop</mount>
    <description>
        Multihop config
    </description>
    <items>
        <general>
        <enabled type="BooleanField">
            <default>0</default>
            <required>Y</required>
        </enabled>
        <autorestart type="BooleanField">
            <default>1</default>
            <required>N</required>
        </autorestart>
        <route type="BooleanField">
            <default>0</default>
            <required>N</required>
        </route>
    </general>
        <clients>
            <client type="ArrayField">
                <vpnid type="IntegerField">
                    <required>Y</required>
                </vpnid>
                <description type="TextField">
                    <ValidationMessage>Not working</ValidationMessage> 
                    <Required>N</Required>
                </description>
            </client>
        </clients>
    </items>
</model>
